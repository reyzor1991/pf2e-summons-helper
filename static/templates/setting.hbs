<div class="form">
    <div class="wrapper scrollable">
        <ul class="directory-list package-list rule-list">
            {{#each packs as |pack|}}
                <li class="package flexcol active">
                    <div class="package-overview flexrow">
                        <div>
                            <label class="package-title checkbox" style="display: flex;">
                                <input type="checkbox" class="active" name="{{pack.id}}"
                                       data-dtype="Boolean" {{#if pack.isActive}} checked {{/if}}>
                            </label>
                        </div>
                        <div class="title-group">
                            <div class="title">{{pack.name}}</div>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="form-group buttons">
        <button type="submit" name="submit">
            <i class="far fa-save"></i> Save
        </button>
    </div>
</div>